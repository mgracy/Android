<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    >
     
    <ImageView android:id="@+id/main_book_list_item_image" android:background="@drawable/poster" android:layout_marginLeft="5dip" android:layout_marginTop="10dip" android:layout_marginBottom="10dip" android:layout_marginRight="10dip" android:layout_width="60dip" android:layout_height="80dip"  />
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/main_book_list_item_image" android:layout_centerVertical="true">
        <TextView android:id="@+id/main_book_list_item_title" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textColor="@color/black" android:textSize="20sp" android:text="标题" android:gravity="center_vertical"/>
    	<TextView android:id="@+id/main_book_list_item_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2sp" android:textColor="@color/black" android:textSize="13sp" android:gravity="center_vertical" android:text="描述描述" android:layout_below="@id/main_book_list_item_title"/>
    	<TextView android:id="@+id/main_book_list_item_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2sp" android:textColor="@color/black" android:textSize="13sp" android:text="时间" android:gravity="center_vertical" android:layout_below="@id/main_book_list_item_desc"/>
    </RelativeLayout>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/detailbtn" android:layout_alignParentRight="true" android:layout_centerInParent="true" android:layout_marginRight="20dip"/>
	<LinearLayout android:layout_width="fill_parent" android:layout_below="@id/main_book_list_item_image" android:layout_height="wrap_content" android:background="@drawable/split_small41"></LinearLayout>
</RelativeLayout>