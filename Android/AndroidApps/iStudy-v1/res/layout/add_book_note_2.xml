<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="240dip"
    android:background="@color/white">
    
    <LinearLayout android:id="@+id/add_book_note_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <EditText android:id="@+id/add_book_note_edittext" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="在这里填写笔记" android:lines="6" android:maxLength="500" android:gravity="top"/> 	
    </LinearLayout>
    
    <LinearLayout android:layout_below="@id/add_book_note_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="20dip">
        <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="@drawable/shadow_bottom"  android:layout_marginTop="15dp"></LinearLayout>
    	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center">
    	    <Button android:id="@+id/add_book_note_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/cancel_big"/>
    	    <Button android:id="@+id/add_book_note_save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/save_big" android:layout_marginLeft="20dip"/>
    	</LinearLayout>
    </LinearLayout>
</RelativeLayout>