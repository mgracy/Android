<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    
    <RelativeLayout android:id="@+id/book_plan_head" android:background="@drawable/nav11" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:onClick="back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/left_arrow" android:layout_alignParentLeft="true" android:layout_marginLeft="5dp"/>
    	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/white" android:textSize="25dip" android:text="个人信息修改" android:layout_centerInParent="true"/>
    </RelativeLayout>
	
    <ImageView android:layout_height="80dip" android:layout_width="60dip" android:background="@drawable/poster" android:layout_marginTop="8dip" android:layout_marginLeft="15dip" android:layout_marginBottom="8dip"/>
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dip" android:layout_marginTop="7dip" android:layout_marginBottom="7dip">
    	<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="昵称:" android:textSize="15dip" android:textColor="@color/black"/>
    	<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Alex" android:textSize="15dip" android:textColor="@color/black" android:layout_marginLeft="10dip"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dip"  android:orientation="horizontal" android:layout_marginTop="7dip" android:layout_marginBottom="7dip">
    	<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="性别:" android:textSize="15dip" android:textColor="@color/black"/>
    	<Button android:id="@+id/user_info_sex" android:onClick="changeSex" android:layout_height="wrap_content" android:layout_width="wrap_content" android:button="@null" android:gravity="center" android:background="@drawable/lbs_female" android:layout_marginLeft="10dip"/>	
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dip" android:layout_marginTop="7dip" android:layout_marginBottom="7dip">
    	<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="生日:" android:textSize="15dip" android:textColor="@color/black"/>
    	<LinearLayout  android:onClick="choseDate"  android:layout_height="wrap_content" android:layout_width="fill_parent" >
    		<TextView android:id="@+id/user_info_birthday" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="2011-10-10" android:textSize="15dip" android:textColor="@color/black" android:layout_marginLeft="10dip"/>
    	</LinearLayout>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dip" android:layout_marginTop="7dip" android:layout_marginBottom="7dip">
    	<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="E-mail:" android:textSize="15dip" android:textColor="@color/black"/>
    	<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="asdfg@163.com" android:textSize="15dip" android:textColor="@color/black" android:layout_marginLeft="10dip"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dip" android:layout_marginRight="15dip">
    	<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:hint="自我介绍:" android:textSize="15dip" android:background="@color/white" android:textColor="@color/black" android:lines="3" android:gravity="top"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/shadow_bottom" />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center" android:layout_marginTop="8dip">
    	<Button android:onClick="save" android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@drawable/save_big"/>
    </LinearLayout>
    
</LinearLayout>