<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"  android:layout_width="fill_parent" android:layout_height="wrap_content">
	<RelativeLayout android:id="@+id/download_book_layout" android:layout_width="fill_parent" android:layout_height="100dip" android:orientation="horizontal" android:background="@color/green" >
	    <ImageView android:id="@+id/download_book_list_item_image" android:background="@drawable/poster" android:layout_marginLeft="5dip" android:layout_marginBottom="2dip" android:layout_marginRight="10dip" android:layout_width="60dip" android:layout_height="80dip" android:layout_centerVertical="true"  />
	    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/download_book_list_item_image" android:layout_centerVertical="true">
	        <TextView android:id="@+id/download_book_list_item_title" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textColor="@color/black" android:textSize="20sp" android:text="标题" android:gravity="center_vertical"/>
	    	<TextView android:id="@+id/download_book_list_item_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dip" android:textColor="@color/black" android:textSize="13sp" android:gravity="center_vertical" android:text="描述描述" android:layout_below="@id/download_book_list_item_title"/>
	    	<TextView android:id="@+id/download_book_list_item_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dip" android:textColor="@color/black" android:textSize="13sp" android:gravity="center_vertical" android:text="时间" android:layout_below="@id/download_book_list_item_desc"/>
	    </RelativeLayout>
	</RelativeLayout>


	<RelativeLayout android:id="@+id/download_sub_book_layout" android:layout_width="fill_parent" android:layout_height="90dip" android:orientation="horizontal" android:background="@color/white" >
	    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:orientation="vertical" android:layout_marginLeft="10dip"  >
	        <TextView android:id="@+id/download_sub_book_list_item_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ABC课程" android:gravity="center_vertical" android:textColor="@color/black" android:textSize="20sp" />
	    	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dip">
	    		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已下载" android:textColor="@color/black" android:textSize="13sp" android:gravity="center_vertical"/>
	    		<TextView android:id="@+id/download_sub_book_list_item_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:text="80%" android:gravity="center_vertical" android:textColor="@color/black" android:textSize="13sp"/>
	    	</LinearLayout>
	    	<ProgressBar android:id="@+id/download_sub_book_list_item_progress_bar" android:progress="80" style="?android:attr/progressBarStyleHorizontal" android:layout_width="150dip" android:layout_height="wrap_content" android:layout_marginTop="3dip" android:minHeight="5dip" android:maxHeight="5dip" />
	    </LinearLayout>
	    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginBottom="5dip" android:layout_centerVertical="true">
		    <ImageButton android:id="@+id/download_sub_book_list_item_button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/cancel_download" android:layout_marginRight="10dip"/>
		</LinearLayout>
	</RelativeLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="2dip" android:background="@color/gray" ></LinearLayout>
</LinearLayout>