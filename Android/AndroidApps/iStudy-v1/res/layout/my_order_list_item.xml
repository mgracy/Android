<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    
   <RelativeLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="10dip" android:layout_marginBottom="5dip">
       <TextView android:id="@+id/my_order_item_notext" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="单号" android:textSize="20sp" android:textColor="@color/black"/>
       <TextView  android:id="@+id/my_order_item_no" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="No2809382839" android:textSize="20sp" android:textColor="@color/black" android:layout_marginLeft="10dip" android:layout_toRightOf="@id/my_order_item_notext"/>
       <TextView android:id="@+id/my_order_item_price" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="89金币" android:layout_alignParentRight="true" android:textSize="20sp" android:textColor="@color/black" android:layout_marginLeft="10dip"/>
   </RelativeLayout> 
    
   <RelativeLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginBottom="10dip">
       <TextView android:id="@+id/my_order_item_status" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="未支付" android:textSize="15sp" android:textColor="@color/black" android:paddingTop="3dip"/>
       <TextView android:id="@+id/my_order_item_time" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="2013-05-29 13:00" android:textSize="13sp" android:textColor="@color/black" android:layout_marginLeft="5dip" android:layout_toRightOf="@id/my_order_item_status" android:paddingTop="5dip"/>
   	   <Button android:id="@+id/my_order_item_pay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/topay_list" android:layout_alignParentRight="true" />
   	   <Button android:id="@+id/my_order_item_cancel" android:layout_toLeftOf="@id/my_order_item_pay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/cancel_list" />
   </RelativeLayout> 
   <LinearLayout android:layout_width="fill_parent" android:layout_alignParentBottom="true" android:layout_height="wrap_content" android:background="@drawable/split_small41"></LinearLayout>
</LinearLayout>