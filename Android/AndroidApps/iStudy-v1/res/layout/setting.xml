<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    
    <RelativeLayout android:background="@drawable/nav11" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:onClick="gotoMenu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/menu11" android:layout_alignParentLeft="true" android:layout_marginLeft="5dp"/>
        <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:orientation="horizontal">
	        <EditText android:id="@+id/download_search_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone" android:lines="1" android:background="@drawable/search_bar11" />
	       	<Button android:id="@+id/download_search_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/search11" android:layout_marginRight="5dp" />
	        <Button android:id="@+id/detail_home" android:onClick="gotoHome" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/home11" android:layout_alignParentRight="true" android:layout_marginRight="5dp"/>
    	</LinearLayout>
    </RelativeLayout>

    <RelativeLayout android:onClick="modifyInfo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="8dip" android:layout_marginBottom="8dip">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="个人信息修改" android:textColor="@color/black" android:textSize="18sp"/>
    	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/detailbtn" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    <RelativeLayout android:onClick="modifyPassword" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="8dip" android:layout_marginBottom="8dip">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="密码修改" android:textColor="@color/black" android:textSize="18sp"/>
    	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/detailbtn" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    <RelativeLayout android:onClick="memoryManage" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="8dip" android:layout_marginBottom="8dip">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="内存管理" android:textColor="@color/black" android:textSize="18sp"/>
    	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/detailbtn" android:layout_alignParentRight="true"/>
    </RelativeLayout>
        
    <LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    <RelativeLayout android:onClick="infoTips" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="8dip" android:layout_marginBottom="8dip">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="信息提示" android:textColor="@color/black" android:textSize="18sp"/>
    	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/detailbtn" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    <RelativeLayout android:onClick="clearMemory" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="8dip" android:layout_marginBottom="8dip">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="清空内存" android:textColor="@color/black" android:textSize="18sp"/>
    	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/detailbtn" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    <RelativeLayout android:onClick="about" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="8dip" android:layout_marginBottom="8dip">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="关于" android:textColor="@color/black" android:textSize="18sp"/>
    	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/detailbtn" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41" />
    
</LinearLayout>