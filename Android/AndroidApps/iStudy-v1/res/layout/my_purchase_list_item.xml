<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    >
     
    <ImageView android:id="@+id/my_purchase_list_item_image" android:background="@drawable/poster" android:layout_marginLeft="5dip" android:layout_centerVertical="true" android:layout_marginRight="10dip" android:layout_marginTop="10dip" android:layout_marginBottom="10dip" android:layout_width="60dip" android:layout_height="80dip"  />
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/my_purchase_list_item_image" android:layout_centerVertical="true"> 
        <TextView android:id="@+id/my_purchase_list_item_title" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textColor="@color/black" android:textSize="20sp" android:text="标题"/>
    	<TextView android:id="@+id/my_purchase_list_item_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dip" android:textColor="@color/black" android:textSize="13sp" android:text="描述描述" android:layout_below="@id/my_purchase_list_item_title"/>
    	<TextView android:id="@+id/my_purchase_list_item_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dip" android:textColor="@color/black" android:textSize="13sp" android:text="时间" android:layout_below="@id/my_purchase_list_item_desc"/>
    </RelativeLayout>
	
    <TextView android:id="@+id/my_purchase_list_item_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="55币" android:layout_alignParentRight="true" android:layout_marginRight="10dip" android:textColor="@color/black" android:textSize="13sp" android:layout_marginTop="15dip" />

    <CheckBox
        android:id="@+id/my_purchase_list_item_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/my_purchase_list_item_price"
        android:layout_marginRight="10dip"
        android:background="@xml/checkbox_button" 
        android:button="@null"
        android:checked="true" android:layout_centerInParent="true"/>
   <LinearLayout android:layout_below="@id/my_purchase_list_item_image" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/split_small41"></LinearLayout> 	
</RelativeLayout>