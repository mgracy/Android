<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout android:id="@+id/my_progress_item_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginLeft="10dip" android:layout_centerVertical="true" android:layout_marginTop="15dip" android:layout_marginBottom="15dip">
        <TextView android:id="@+id/my_progress_list_item_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ABC课程" android:textColor="@color/black" android:textSize="20sp" android:layout_marginBottom="2dip"/>
    	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
    		<TextView android:id="@+id/my_progress_list_item_startdate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2013-05-05" android:textColor="@color/black" android:textSize="13sp"/>
    		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:text="到" android:textColor="@color/black" android:textSize="13sp"/>
    		<TextView android:id="@+id/my_progress_list_item_enddate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:text="2013-06-05" android:textColor="@color/black" android:textSize="13sp"/>
    	</LinearLayout>

    	<ProgressBar android:id="@+id/download_sub_book_list_item_progress_bar" style="?android:attr/progressBarStyleHorizontal" android:layout_width="150dip" android:layout_height="wrap_content" android:layout_marginTop="3dip" android:progress="60" android:minHeight="5dip" android:maxHeight="5dip" />

    </LinearLayout>
	
	<ImageButton android:id="@+id/my_progress_list_item_play" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:background="@drawable/play" android:layout_marginRight="10dip" android:layout_marginTop="12dip"  />
	<ImageButton android:id="@+id/my_progress_list_item_delete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/delete" android:layout_toLeftOf="@id/my_progress_list_item_play" android:layout_marginRight="10dip" android:layout_marginTop="12dip"  />
	<TextView android:id="@+id/my_progress_list_item_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已进行5天完成100%" android:layout_alignParentRight="true" android:textSize="13sp" android:layout_below="@id/my_progress_list_item_play" android:textColor="@color/black"  android:layout_marginRight="10dip"/>
	<LinearLayout android:layout_below="@id/my_progress_item_layout" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:background="@drawable/split_small41"></LinearLayout>
</RelativeLayout>