<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="122dip"
    >
    
    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_gravity="bottom" android:gravity="bottom">
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/woodstand61"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/main__book_grid_list_layout" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="bottom" android:paddingTop="10dip"  android:paddingBottom="13dip">
        <ImageView android:id="@+id/main_book_item_image1"  android:layout_width="80dip" android:layout_height="100dip" android:background="@drawable/poster" />
        <ImageView android:id="@+id/main_book_item_image2"  android:layout_width="80dip" android:layout_height="100dip" android:background="@drawable/poster" android:layout_marginLeft="25dip" android:layout_marginRight="25dip"/>
        <ImageView android:id="@+id/main_book_item_image3"  android:layout_width="80dip" android:layout_height="100dip" android:background="@drawable/poster" />
    </LinearLayout>
    
    
</FrameLayout>