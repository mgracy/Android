<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="冰糖莲子炖木瓜         10.00" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="莲子百合炖瘦肉         10.00" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="香菇花生炖凤爪         10.00" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="茶树菇炖排骨             11.00" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="花旗参炖竹丝鸡         13.00" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="虫草菌干鲍鱼炖瘦肉 18.00" />
    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:text="请点餐"/>

    <Button
        android:id="@+id/btn_android"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:background="#00cc00"
        android:text="Android"/>
    <Button
        android:id="@+id/btn_world"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:background="#0000cc"
        android:text="World"/>
</LinearLayout>